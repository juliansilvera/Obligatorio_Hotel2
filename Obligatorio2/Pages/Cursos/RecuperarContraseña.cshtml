@page
@model Obligatorio2.Pages.Cursos.RecuperarContraseñaModel
@{
    ViewData["Title"] = "Recuperar Contraseña";
}

<div class="container mt-4">
    <h2 class="text-center">Recuperar Contraseña</h2>

    @if (!string.IsNullOrEmpty(Model.Mensaje))
    {
        <div class="alert @((Model.Mensaje.Contains("No se encontró")) ? "alert-danger" : "alert-info") text-center">
            @Model.Mensaje
        </div>
    }

    <form method="post">
        <div class="form-group">
            <label for="Email">Correo electrónico</label>
            <input type="email" class="form-control" id="Email" name="Email" placeholder="Ingresa tu correo" required />
        </div>

        <div class="form-group mt-3">
            <button type="submit" class="btn btn-primary btn-block">Recuperar Contraseña</button>
        </div>
    </form>
</div>
