<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hotel Estrella del Mar</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">Hotel Estrella del Mar</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Cursos/Login">Iniciar Sesión</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Cursos/Registrar">Registrarse</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Cursos/Habitaciones">Habitaciones Disponibles</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Cursos/MisReservas">Mis Reservas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Cursos/Estadisticas">Estadísticas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Cursos/RecuperarContraseña">Olvidé la Contraseña</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main role="main" class="container mt-4">
        @RenderBody()
    </main>
    <footer>
        <div class="container">
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
